---
import MainLayout from "../layouts/MainLayout.astro";
import Pill from "../components/Pill.astro";
import Text from "../components/Text.astro";
import Heading from "../components/Heading.astro";
import LangToggle from "../components/LangToggle.astro";
---

<MainLayout title="">
  <div class="min-h-screen grid place-items-center">
    <video autoplay loop muted playsinline class="h-auto">
      <source src="/cloudanimation1.webm" type="video/webm" />
    </video>
  </div>

  <!-- About -->
  <section id="about" class="grid grid-cols-1 lg:grid-cols-12 gap-4 m-8 lg:m-20 mb-20">
    <!-- About card -->
    <div class="relative border-3 border-[var(--color-primary)] rounded-xl col-span-1 lg:col-span-7 p-6 lg:p-4">
      <!-- Butterfly #2 -->
      <div class="hidden lg:block butterfly-flutter absolute cursor-pointer select-none top-[445px] left-[480px] w-20" style="--rot:-6deg">
        <img src="/butterfly2.svg" alt="" aria-hidden="true" class="butterfly-img block w-full" />
      </div>

      <Heading htmlheading="h2" font="header" stylingclasses="text-[var(--color-primary)]" >
        <span data-i18n="about.h2">About</span>
      </Heading>

      <Text teksttype="paragraph" stylingclasses="text-[var(--color-primary)]">
        <span data-i18n="about.p">
          My name is Kiana DellaGatta, I am a Multimedia Design student in my 3rd semester, focusing on digital design,
          especially UX/UI and graphic design. I am passionate about creating creative solutions that speak to the target
          audience. During my internship, I want to gain insight into professional design processes and teamwork. As a
          colleague, I am collaborative, communicative, and contribute with creativity.
        </span>
      </Text>
    </div>

    <!-- Image card -->
    <div class="relative border-3 border-[var(--color-primary)] rounded-xl col-span-1 lg:col-span-4 lg:col-start-9">
      <!-- Butterfly #1 -->
      <div class="hidden lg:block butterfly-fly absolute cursor-pointer select-none top-[-20px] right-[-20px] w-24" style="--rot:6deg">
        <img src="/butterfly1.svg" alt="" aria-hidden="true" class="butterfly-img block w-full" />
      </div>
      <img src="/Kiana.png" alt="Picture of Kiana" class="rounded-xl w-full h-full object-cover" />
    </div>
  </section>

  <!-- Skills grid -->
  <section id="skills" class="grid grid-cols-1 lg:grid-cols-12 lg:grid-rows-2 gap-4 m-8 lg:m-20 mb-20">

    <!-- Languages -->
    <div class="relative col-span-1 lg:col-span-5 lg:row-span-1 border-3 border-[var(--color-primary)] rounded-xl p-6 lg:p-4">
      <img src="/flower.svg" alt="" aria-hidden="true" class="hidden lg:block absolute -top-6 -left-6 w-14 z-20 select-none flower-anim parallax" />
      <Heading htmlheading="h3" font="header" stylingclasses="text-[var(--color-primary)]">
        <span data-i18n="languages.h3">Languages</span>
      </Heading>
      <div class="space-x-4 space-y-4">
        <!-- Pills left as-is -->
        <Pill label="English - Native" />
        <Pill label="Danish - Fluent" />
      </div>
    </div>

    <!-- Education -->
    <div class="relative col-span-1 lg:col-span-5 lg:row-start-2 border-3 border-[var(--color-primary)] rounded-xl p-6 lg:p-4">
      <div class="hidden lg:block absolute -bottom-10 right-10 w-16 z-20 cursor-pointer select-none butterfly-fly-big" style="--rot:-6deg" aria-hidden="true">
        <img src="/butterfly3.svg" alt="" class="block w-full butterfly-img" />
      </div>

      <Heading htmlheading="h3" font="header" stylingclasses="text-[var(--color-primary)]">
        <span data-i18n="education.h3">Education</span>
      </Heading>
      <div class="space-x-4 space-y-4">
        <Pill label="2024 - 2026" />
      </div>
      <Text teksttype="paragraph" stylingclasses="text-[var(--color-primary)]">
        <span data-i18n="education.p">Multimediedesigner, EK - KÃ¸benhavns Erhvervsakademi</span>
      </Text>
    </div>

    <!-- Skills -->
    <div class="relative col-span-1 lg:col-span-7 lg:col-start-7 lg:row-span-2 border-3 border-[var(--color-primary)] rounded-xl p-6 lg:p-4">
      <div class="hidden lg:block absolute -top-14 -right-10 z-20 transition-transform duration-200 will-change-transform hover:scale-110 hover:[filter:drop-shadow(0_0_22px_var(--color-primary))]" aria-hidden="true">
        <img src="/sun.svg" alt="" class="w-36 select-none pointer-events-none animate-sun" />
      </div>

      <!-- Intentionally NOT translated -->
      <Heading htmlheading="h3" font="header" stylingclasses="text-[var(--color-primary)]">Skills</Heading>
      <div class="space-x-4 space-y-4">
        <Pill label="Photoshop" /><Pill label="Premiere Pro" /><Pill label="Figma" />
        <Pill label="After Effects" /><Pill label="Illustrator" /><Pill label="Light Room" />
        <Pill label="UX/UI" /><Pill label="Tailwind" /><Pill label="Astro" />
        <Pill label="HTML/CSS" /><Pill label="Alpine.js" />
      </div>
    </div>
  </section>

  <!-- Past Projects -->
  <section class="pastprojects m-8 lg:m-20 relative" id="projects">
    <Heading htmlheading="h2" font="header" stylingclasses="text-[var(--color-primary)]">
      <span data-i18n="past.h2">Past Projects</span>
    </Heading>

    <!-- Logofolio -->
    <section class="relative mt-6 border-3 border-[var(--color-primary)] rounded-xl p-6 lg:p-8">
      <img src="/flower2.svg" alt="" class="hidden lg:block absolute -top-6 -right-6 w-20 flower-anim" aria-hidden="true" />
      <div class="hidden lg:block absolute top-1/2 -left-10 w-18 butterfly-flutter" style="--rot:-4deg" aria-hidden="true">
        <img src="/butterfly4.svg" alt="" class="w-full butterfly-img" />
      </div>

      <Heading htmlheading="h3" font="header" stylingclasses="text-[var(--color-primary)] mb-4">
        <span data-i18n="logofolio.h3">Logofolio</span>
      </Heading>
      <div class="grid grid-cols-2 justify-items-center gap-6 lg:grid-cols-4">
        <img src="/kulturnat_logo.svg" alt="Kulturnat Logo" class="w-full max-w-[220px] object-contain" />
        <img src="/ccc_logo.svg" alt="CCC Logo" class="w-full max-w-[220px] object-contain" />
        <img src="/thehungrypassport_logo.svg" alt="The Hungry Passport Logo" class="w-full max-w-[220px] object-contain" />
        <img src="/maksofilm_logo.svg" alt="Maksofilm Logo" class="w-full max-w-[220px] object-contain" />
      </div>
    </section>

    <!-- Character Design -->
    <section class="relative mt-6 border-3 border-[var(--color-primary)] rounded-xl p-6 lg:p-8">
      <img src="/flower3.svg" alt="" class="hidden lg:block absolute -bottom-8 -left-8 w-20 flower-anim" aria-hidden="true" />
      <div class="hidden lg:block absolute -bottom-10 -right-10 w-22 butterfly-fly" style="--rot:8deg" aria-hidden="true">
        <img src="/butterfly5.svg" alt="" class="w-22 butterfly-img" />
      </div>

      <Heading htmlheading="h3" font="header" stylingclasses="text-[var(--color-primary)] mb-4">
        <span data-i18n="characters.h3">Character Design</span>
      </Heading>
      <div class="grid grid-cols-1 justify-items-center gap-6 lg:grid-cols-2">
        <img src="/game_characters.svg" alt="Game Characters" class="w-full max-w-[520px] object-contain" />
        <img src="/instant_characters.svg" alt="Instant Characters" class="w-full max-w-[520px] object-contain" />
      </div>
    </section>
  </section>
</MainLayout>