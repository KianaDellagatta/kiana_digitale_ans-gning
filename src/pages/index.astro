<style>
/* --- Butterfly #1 (short fly-around) --- */
@keyframes flyAround {
  0%   { transform: translate(0,0) rotate(var(--rot,0)); }
  20%  { transform: translate(40px,-40px) rotate(calc(var(--rot,0) + 20deg)); }
  40%  { transform: translate(80px,-10px) rotate(calc(var(--rot,0) - 10deg)); }
  60%  { transform: translate(-20px,-50px) rotate(calc(var(--rot,0) + 15deg)); }
  80%  { transform: translate(-40px,-20px) rotate(calc(var(--rot,0) - 10deg)); }
  100% { transform: translate(0,0) rotate(var(--rot,0)); }
}
.butterfly-fly .butterfly-img { transition: transform 0.3s ease; }
.butterfly-fly:hover .butterfly-img { animation: flyAround 2.5s ease-in-out forwards; }

/* --- Butterfly #2 (flutter on hover‚Äîno glow) --- */
@keyframes flutter {
  0%   { transform: translateY(0) rotate(calc(var(--rot,0) - 3deg)) scale(1); }
  25%  { transform: translateY(-2px) rotate(calc(var(--rot,0) + 6deg)) scale(1.03); }
  50%  { transform: translateY(0) rotate(calc(var(--rot,0) - 2deg)) scale(1.01); }
  75%  { transform: translateY(-1px) rotate(calc(var(--rot,0) + 4deg)) scale(1.03); }
  100% { transform: translateY(0) rotate(var(--rot,0)) scale(1); }
}
.butterfly-flutter .butterfly-img { transition: transform 0.3s ease; }
.butterfly-flutter:hover .butterfly-img { animation: flutter 500ms ease-in-out infinite; }

/* --- Butterfly #3 (idle flutter + BIG flight on hover) --- */
@keyframes flutterIdle {
  0%   { transform: translateY(0) rotate(calc(var(--rot,0) - 2deg)) scale(1); }
  50%  { transform: translateY(-3px) rotate(calc(var(--rot,0) + 4deg)) scale(1.02); }
  100% { transform: translateY(0) rotate(var(--rot,0)) scale(1); }
}
.butterfly-fly-big .butterfly-img {
  animation: flutterIdle 2s ease-in-out infinite;
  transition: transform 0.3s ease;
}
@keyframes flyAroundBig {
  0%   { transform: translate(0,0) rotate(var(--rot,0)); }
  15%  { transform: translate(80px,-60px) rotate(calc(var(--rot,0) + 20deg)); }
  30%  { transform: translate(160px,-20px) rotate(calc(var(--rot,0) - 10deg)); }
  50%  { transform: translate(-60px,-100px) rotate(calc(var(--rot,0) + 25deg)); }
  70%  { transform: translate(-100px,-40px) rotate(calc(var(--rot,0) - 15deg)); }
  100% { transform: translate(0,0) rotate(var(--rot,0)); }
}
.butterfly-fly-big:hover .butterfly-img { animation: flyAroundBig 3.5s ease-in-out forwards; }

/* üå∏ Flower */
@keyframes sway {
  0%,100% { transform: rotate(-4deg) translateY(0); }
  50%     { transform: rotate(4deg) translateY(-2px); }
}
@keyframes spinBloom {
  0%   { transform: scale(1) rotate(0deg); }
  50%  { transform: scale(1.2) rotate(180deg); }
  100% { transform: scale(1) rotate(360deg); }
}
.flower-anim {
  animation: sway 5s ease-in-out infinite;
  transition: transform 0.3s ease, filter 0.3s ease;
}
.flower-anim:hover {
  animation: spinBloom 1.5s ease-in-out;
  filter: drop-shadow(0 0 18px hsla(223, 100%, 50%, 0.966));
}

/* --- Sun --- */
@keyframes spinBob {
  0%   { transform: translateY(0) rotate(0deg); }
  50%  { transform: translateY(-6px) rotate(180deg); }
  100% { transform: translateY(0) rotate(360deg); }
}
.animate-sun { animation: spinBob 18s linear infinite; }

/* Motion safety */
@media (prefers-reduced-motion: reduce) {
  .animate-sun, .butterfly-img, .flower-anim { animation: none !important; }
}

/* üå∏ Flowers idle sway */
@keyframes sway {
  0%,100% { transform: rotate(-4deg) translateY(0); }
  50%     { transform: rotate(4deg) translateY(-3px); }
}
.flower-anim {
  animation: sway 5s ease-in-out infinite;
  transition: transform 0.3s ease, filter 0.3s ease;
}
.flower-anim:hover {
  transform: scale(1.15);
  filter: drop-shadow(0 0 14px var(--color-primary));
}

/* ü¶ã Butterfly flutter hover */
@keyframes flutter {
  0%   { transform: translateY(0) rotate(calc(var(--rot,0) - 3deg)) scale(1); }
  25%  { transform: translateY(-3px) rotate(calc(var(--rot,0) + 6deg)) scale(1.05); }
  50%  { transform: translateY(0) rotate(calc(var(--rot,0) - 2deg)) scale(1); }
  75%  { transform: translateY(-2px) rotate(calc(var(--rot,0) + 4deg)) scale(1.05); }
  100% { transform: translateY(0) rotate(var(--rot,0)) scale(1); }
}
.butterfly-flutter:hover .butterfly-img {
  animation: flutter 600ms ease-in-out infinite;
}

/* ü¶ã Butterfly fly-around (larger path) */
@keyframes flyAround {
  0%   { transform: translate(0,0) rotate(var(--rot,0)); }
  20%  { transform: translate(60px,-50px) rotate(calc(var(--rot,0) + 20deg)); }
  40%  { transform: translate(120px,-10px) rotate(calc(var(--rot,0) - 10deg)); }
  60%  { transform: translate(-30px,-80px) rotate(calc(var(--rot,0) + 25deg)); }
  80%  { transform: translate(-60px,-20px) rotate(calc(var(--rot,0) - 15deg)); }
  100% { transform: translate(0,0) rotate(var(--rot,0)); }
}
.butterfly-fly:hover .butterfly-img {
  animation: flyAround 3s ease-in-out forwards;
}

/* üõ°Ô∏è Motion safety */
@media (prefers-reduced-motion: reduce) {
  .flower-anim,
  .butterfly-img { animation: none !important; }
}

</style>